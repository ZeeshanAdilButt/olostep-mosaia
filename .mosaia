{
  "name": "Olostep Tools",
  "description": "The most reliable and cost-effective web search, scraping and crawling API for AI. Build intelligent agents that can search, scrape, analyze, and structure data from any website.",
  "schema": {
    "type": "function",
    "function": {
      "name": "olostep_tools",
      "description": "Execute Olostep web data capabilities including single-page scraping, batch scraping, site crawling, URL mapping, and AI answers with optional citations.",
      "strict": false,
      "parameters": {
        "type": "object",
        "properties": {
          "operation": {
            "type": "string",
            "description": "Which Olostep operation to run: scrape_website (scrape a single URL), batch_scrape (scrape multiple URLs), create_crawl (crawl a website), create_map (discover URLs on a site), ask_ai_answer (get AI answers from web content)",
            "enum": ["scrape_website", "batch_scrape", "create_crawl", "create_map", "ask_ai_answer"]
          },
          "url_to_scrape": {
            "type": "string",
            "description": "URL to scrape (required for scrape_website operation)"
          },
          "formats": {
            "type": "string",
            "description": "Desired output format: html, markdown, json, or text. Use comma-separated values for multiple formats e.g. 'markdown,html'"
          },
          "country": {
            "type": "string",
            "description": "Country code for routing, e.g., US, GB"
          },
          "wait_before_scraping": {
            "type": "string",
            "description": "Milliseconds to wait before scraping (as string number)"
          },
          "parser": {
            "type": "string",
            "description": "Optional parser id, e.g., @olostep/amazon-product"
          },
          "urls": {
            "type": "string",
            "description": "Comma-separated list of URLs for batch_scrape operation"
          },
          "start_url": {
            "type": "string",
            "description": "Start URL for create_crawl operation"
          },
          "max_pages": {
            "type": "string",
            "description": "Max pages for create_crawl (as string number)"
          },
          "follow_links": {
            "type": "string",
            "description": "Follow links during crawl: true or false"
          },
          "url": {
            "type": "string",
            "description": "Site URL for create_map operation"
          },
          "search_query": {
            "type": "string",
            "description": "Optional site search query for create_map or answers"
          },
          "top_n": {
            "type": "string",
            "description": "Limit URLs for create_map (as string number)"
          },
          "include_urls": {
            "type": "string",
            "description": "Comma-separated URL patterns to include"
          },
          "exclude_urls": {
            "type": "string",
            "description": "Comma-separated URL patterns to exclude"
          },
          "question": {
            "type": "string",
            "description": "Question for ask_ai_answer operation"
          },
          "context_urls": {
            "type": "string",
            "description": "Comma-separated context URLs to ground answers"
          },
          "include_citations": {
            "type": "string",
            "description": "Include citations in answer: true or false"
          },
          "top_k_sources": {
            "type": "string",
            "description": "Max sources for answers (as string number)"
          },
          "format": {
            "type": "string",
            "description": "Output format for answers: markdown, text, or json"
          }
        },
        "required": ["operation"],
        "additionalProperties": false
      }
    }
  },
  "envVars": ["OLOSTEP_API_KEY"]
}


