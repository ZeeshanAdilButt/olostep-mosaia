{
  "name": "Olostep Tools",
  "description": "The most reliable and cost-effective web search, scraping and crawling API for AI. Build intelligent agents that can search, scrape, analyze, and structure data from any website.",
  "schema": {
    "type": "function",
    "function": {
      "name": "olostep_tools",
      "description": "Execute Olostep web scraping and crawling operations. IMPORTANT: Use EXACT parameter names with underscores (e.g., 'url_to_scrape' NOT 'url to scrape'). Available operations: scrape_website, batch_scrape, create_crawl, create_map, ask_ai_answer",
      "strict": true,
      "parameters": {
        "type": "object",
        "properties": {
          "operation": {
            "type": "string",
            "description": "REQUIRED. Must be one of: 'scrape_website', 'batch_scrape', 'create_crawl', 'create_map', 'ask_ai_answer'. Use underscores, not spaces.",
            "enum": ["scrape_website", "batch_scrape", "create_crawl", "create_map", "ask_ai_answer"]
          },
          "url_to_scrape": {
            "type": "string",
            "description": "URL to scrape. REQUIRED for 'scrape_website'. Example: 'https://example.com'"
          },
          "formats": {
            "type": "string",
            "description": "Output format(s). Options: 'html', 'markdown', 'json', 'text'. For multiple formats use comma-separated string: 'markdown,html'. Default: 'markdown'"
          },
          "country": {
            "type": "string",
            "description": "Country code for routing, e.g., US, GB"
          },
          "wait_before_scraping": {
            "type": "string",
            "description": "Milliseconds to wait before scraping (as string number)"
          },
          "parser": {
            "type": "string",
            "description": "Optional parser id, e.g., @olostep/amazon-product"
          },
          "urls": {
            "type": "string",
            "description": "Comma-separated list of URLs for batch_scrape operation"
          },
          "start_url": {
            "type": "string",
            "description": "Starting URL for crawling. REQUIRED for 'create_crawl'. Example: 'https://example.com'"
          },
          "max_pages": {
            "type": "string",
            "description": "Maximum pages to crawl. For 'create_crawl'. String number, e.g., '10', '50'"
          },
          "follow_links": {
            "type": "string",
            "description": "Whether to follow links during crawl. For 'create_crawl'. Use 'true' or 'false' as string"
          },
          "url": {
            "type": "string",
            "description": "Site URL for create_map operation"
          },
          "search_query": {
            "type": "string",
            "description": "Optional site search query for create_map or answers"
          },
          "top_n": {
            "type": "string",
            "description": "Limit URLs for create_map (as string number)"
          },
          "include_urls": {
            "type": "string",
            "description": "Comma-separated URL patterns to include"
          },
          "exclude_urls": {
            "type": "string",
            "description": "Comma-separated URL patterns to exclude"
          },
          "task": {
            "type": "string",
            "description": "Question or task for AI to answer using web data. REQUIRED for 'ask_ai_answer'. Formerly called 'question'. Example: 'What are the latest company updates?'"
          },
          "context_urls": {
            "type": "string",
            "description": "Comma-separated URLs to ground the answer. For 'ask_ai_answer'. Example: 'https://example.com/about,https://example.com/blog'"
          },
          "include_citations": {
            "type": "string",
            "description": "Include citations/sources in the answer. For 'ask_ai_answer'. Use 'true' or 'false' as string. Default: 'true'"
          },
          "top_k_sources": {
            "type": "string",
            "description": "Maximum number of sources to use for answer. For 'ask_ai_answer'. String number, e.g., '3', '5'"
          },
          "format": {
            "type": "string",
            "description": "Output format for answer. For 'ask_ai_answer'. Options: 'markdown', 'text', 'json'. Default: 'markdown'"
          },
          "json": {
            "type": "string",
            "description": "Desired JSON output schema for structured answers. For 'ask_ai_answer'. Example: '{\"company\":\"\",\"funding\":\"\",\"employees\":\"\"}'"
          }
        },
        "required": ["operation"],
        "additionalProperties": false
      }
    }
  },
  "envVars": ["OLOSTEP_API_KEY"]
}


