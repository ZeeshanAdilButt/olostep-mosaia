{
    "name": "Olostep Web Tools",
    "description": "The most reliable web search, scraping and crawling API for AI agents. Scrape websites, crawl pages, map URLs, and get AI-powered answers from web content.",
    "schema": {
        "type": "function",
        "function": {
            "name": "Olostep Web Tools",
            "description": "Execute web data operations: scrape_website (extract content from URL), batch_scrape (scrape multiple URLs), create_crawl (crawl entire site), create_map (discover URLs), ask_ai_answer (AI answers from web). Pass operation name and required parameters.",
            "strict": false,
            "parameters": {
                "type": "object",
                "properties": {
                    "operation": {
                        "type": "string",
                        "description": "Operation to execute. Must be one of: scrape_website, batch_scrape, create_crawl, create_map, ask_ai_answer"
                    },
                    "url_to_scrape": {
                        "type": "string",
                        "description": "URL to scrape. Required for scrape_website. Example: https://example.com"
                    },
                    "urls": {
                        "type": "string",
                        "description": "Comma-separated URLs for batch_scrape. Example: https://a.com,https://b.com"
                    },
                    "start_url": {
                        "type": "string",
                        "description": "Starting URL for create_crawl. Example: https://example.com"
                    },
                    "url": {
                        "type": "string",
                        "description": "Site URL for create_map. Example: https://example.com"
                    },
                    "task": {
                        "type": "string",
                        "description": "Question or task for ask_ai_answer. Example: What is the company about?"
                    },
                    "formats": {
                        "type": "string",
                        "description": "Output format(s): markdown, html, json, text. Comma-separated for multiple."
                    },
                    "max_pages": {
                        "type": "string",
                        "description": "Max pages to crawl (number as string). Example: 10"
                    },
                    "follow_links": {
                        "type": "string",
                        "description": "Follow links during crawl: true or false"
                    },
                    "top_n": {
                        "type": "string",
                        "description": "Max URLs to return from create_map (number as string). Example: 50"
                    },
                    "country": {
                        "type": "string",
                        "description": "Country code for geo-routing. Example: US, GB"
                    },
                    "json": {
                        "type": "string",
                        "description": "JSON schema for structured AI answers. Example: {\"company\":\"\",\"size\":\"\"}"
                    }
                },
                "required": ["operation"],
                "additionalProperties": false
            }
        }
    },
    "envVars": ["OLOSTEP_API_KEY"]
}
